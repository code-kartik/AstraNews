<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1117"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#21262D"
        app:cardCornerRadius="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:padding="12dp"
                android:paddingStart="27dp"
                android:paddingEnd="27dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/open_parantheses"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cardBackgroundColor="#161b22"
                    app:cardCornerRadius="11dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato"
                        android:text="("
                        android:textAlignment="center"
                        android:textColor="#7371FE"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/closed_parantheses"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="22dp"
                    app:cardBackgroundColor="#161b22"
                    app:cardCornerRadius="11dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato"
                        android:text=")"
                        android:textAlignment="center"
                        android:textColor="#7371FF"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/multiply"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="22dp"
                    app:cardBackgroundColor="#161b22"
                    app:cardCornerRadius="11dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato"
                        android:text="X"
                        android:textAlignment="center"
                        android:textColor="#7371FF"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/backspace"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="22dp"
                    app:cardBackgroundColor="#161b22"
                    app:cardCornerRadius="11dp">

                    <TextView
                        android:layout_marginLeft="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato"
                        android:drawableStart="@drawable/ic_baseline_backspace_24"
                        android:textAlignment="center"
                        android:textColor="#7371FF"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:paddingStart="27dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/seven"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cardBackgroundColor="#161b22"
                    app:cardCornerRadius="11dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato"
                        android:text="7"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/eight"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="22dp"
                    app:cardBackgroundColor="#161b22"
                    app:cardCornerRadius="11dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato"
                        android:text="8"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/nine"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="22dp"
                    app:cardBackgroundColor="#161b22"
                    app:cardCornerRadius="11dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato"
                        android:text="9"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/divide"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="22dp"
                    app:cardBackgroundColor="#161b22"
                    app:cardCornerRadius="11dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato"
                        android:text="/"
                        android:textAlignment="center"
                        android:textColor="#7371FF"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:paddingStart="27dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/four"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cardBackgroundColor="#161b22"
                    app:cardCornerRadius="11dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato"
                        android:text="4"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/five"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="22dp"
                    app:cardBackgroundColor="#161b22"
                    app:cardCornerRadius="11dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato"
                        android:text="5"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/six"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="22dp"
                    app:cardBackgroundColor="#161b22"
                    app:cardCornerRadius="11dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato"
                        android:text="6"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/minus"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="22dp"
                    app:cardBackgroundColor="#161b22"
                    app:cardCornerRadius="11dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato"
                        android:text="—"
                        android:textAlignment="center"
                        android:textColor="#7371FF"
                        android:textSize="32dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:paddingStart="27dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/one"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cardBackgroundColor="#161b22"
                    app:cardCornerRadius="11dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/two"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="22dp"
                    app:cardBackgroundColor="#161b22"
                    app:cardCornerRadius="11dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato"
                        android:text="2"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/three"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="22dp"
                    app:cardBackgroundColor="#161b22"
                    app:cardCornerRadius="11dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato"
                        android:text="3"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/plus"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="22dp"
                    app:cardBackgroundColor="#161b22"
                    app:cardCornerRadius="11dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato"
                        android:text="+"
                        android:textAlignment="center"
                        android:textColor="#7371FF"
                        android:textSize="32dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginBottom="20dp"
                android:paddingStart="27dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ac"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cardBackgroundColor="#161b22"
                    app:cardCornerRadius="11dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato"
                        android:text="AC"
                        android:textAlignment="center"
                        android:textColor="#20D8AC"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/zero"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="22dp"
                    app:cardBackgroundColor="#161b22"
                    app:cardCornerRadius="11dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/decimal"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="22dp"
                    app:cardBackgroundColor="#161b22"
                    app:cardCornerRadius="11dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato"
                        android:text="."
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="32dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/equals"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="22dp"
                    app:cardBackgroundColor="#161b22"
                    app:cardCornerRadius="11dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/lato"
                        android:text="="
                        android:textAlignment="center"
                        android:textColor="#20D8AC"
                        android:textSize="32sp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/inputtext"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/lato"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="#A3A3A3"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/output"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/output"
        android:layout_width="375dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/lato"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>